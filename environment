#!/bin/bash

#export dir=/pfss_fs1
export scriptdir=`pwd`


export METEO_DIR=${scriptdir}/WRF
export OUTPUT_DIR=${scriptdir}/output
export BOUNDARY_DIR=${scriptdir}/bnd58


export silam_binary=${scriptdir}/../singularity/silam/silam_v5_9pub.gnu   # serial run
export silam_ini=${scriptdir}/silam-model/ini  

if [ -n "${ECF_NAME-}" ]; then 
  echo "Running form ecflow"
  export progresscmd="ecflow_client --meter=progress"
  #export MAILTO="rostislav.kouznetsov@fmi.fi,mikhail.sofiev@fmi.fi"
  export MAILTO="rostislav.kouznetsov@fmi.fi"

else
  echo "Running standalone: no mail!"
  export progresscmd="echo NON_OPER_PROGRESS"
  export MAILTO=""
fi


export outsuff="" ## Can be set non-empty to alter the  output directory

export bbox=

export fcdate=`date -u -d "3 hours" +%Y%m%d`
#export fcdate='20240520'

export maxhours=72

#Suite-specific setup
export suitename=AQ-INA
export email="test-imd"
export lonrange="94.5,141.5"
export latrange="-11.5,7.5"
export bbox="${lonrange},${latrange}" #lo,lo,la,la
export mpdset="hires"

export publish=false
# Geometry depends on the picture Upper-leftcorner of logo with respect
# to upper-left corner of a picture 
export PUTLOGOCMD="composite  -geometry  +110+475  $scriptdir/fmi-logo-60x30a.png"
# Special logo for aqi and pollen index pictures
export PUTLOGOCMDINDEX="$PUTLOGOCMD"

